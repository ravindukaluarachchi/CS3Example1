<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="cs3cartPU" transaction-type="JTA">
    <jta-data-source>jdbc:mysql://localhost:3306/cs3cart?zeroDateTimeBehavior=convertToNull</jta-data-source>
    <class>com.rav.entity.Task</class>
    <class>com.rav.entity.Item</class>
    <class>com.rav.entity.Cart</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
    </properties>
  </persistence-unit>
</persistence>
